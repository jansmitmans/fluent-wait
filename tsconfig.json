{  "compilerOptions": {
        "target": "ESNext",
        // "allowSyntheticDefaultImports": true,
        "module": "ESNext", // or ES2015, ES2020
        "moduleResolution": "node",
        "lib": ["ESNext"],
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
}
